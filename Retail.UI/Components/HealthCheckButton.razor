@using System.Net.Http
@inject HttpClient Http

<div class="health-check-button">
    <button class="btn btn-primary" @onclick="CheckHealth" disabled="@IsChecking">
        @if (IsChecking)
        {
            <span>üîÑ Checking...</span>
        }
        else
        {
            <span>üîç Check Health</span>
        }
    </button>
    
    @if (LastResult != null)
    {
        <div class="result @(LastResult.IsSuccess ? "success" : "error")">
            @if (LastResult.IsSuccess)
            {
                <span>‚úÖ @LastResult.ServiceName is healthy</span>
            }
            else
            {
                <span>‚ùå @LastResult.ServiceName: @LastResult.ErrorMessage</span>
            }
        </div>
    }
</div>

<style>
    .health-check-button {
        display: flex;
        flex-direction: column;
        gap: 10px;
        align-items: center;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        font-size: 1rem;
        transition: all 0.2s ease;
    }

    .btn:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    .btn-primary {
        background: #007bff;
        color: white;
    }

    .btn-primary:hover:not(:disabled) {
        background: #0056b3;
        transform: translateY(-1px);
    }

    .result {
        padding: 8px 16px;
        border-radius: 6px;
        font-size: 0.9rem;
        font-weight: bold;
    }

    .result.success {
        background: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .result.error {
        background: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }
</style>
